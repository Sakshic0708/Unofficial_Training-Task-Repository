@model object
@{
    var Isrequired = false;
    if (ViewBag.IsRequired!=null)
    {
        Isrequired = true;
    }
    var customClass = "form-control";
    if (ViewBag.customclass != null)
    {
        customClass = customClass + " " + ViewBag.customclass;
    }
}
<div class="form-group">
    <label asp-for="@Model" class="control-label"></label>
    <input asp-for="@Model" class="@customClass" />
    @if (Isrequired)
    {
        <span asp-validation-for="@Model" class="text-danger"></span>
    }
</div>