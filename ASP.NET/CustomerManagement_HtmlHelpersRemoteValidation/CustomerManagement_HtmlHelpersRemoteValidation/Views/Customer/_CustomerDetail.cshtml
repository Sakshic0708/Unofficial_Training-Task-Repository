@model DataAccessLayer.Models.Customer


<div class="container">
    <div class="row">
        <div class="col-md-6 information">
            <p> Name: @Model.Name</p>
            <p> Email: @Model.Email</p>
        </div>
        <div class="col-md-6">
            <img src="/ProfilePicture/@Model.FilePath" alt="Profile Picture" id="ProfilePicture">
        </div>
    </div>
</div>