@model DataAccessLayer.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="container-fluid row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            @Html.HiddenFor(m => m.Id)
            @Html.EditorFor(m => m.Name, null, "Name", new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(m => m.Email, null, "Email", new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(m => m.Phone, null, "Phone", new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorFor(m => m.Address, null, "Address", new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(m => m.FilePath)
            <div class="form-group">
                <label class="fw-bold">Profile Picture</label>
                <input type="file" name="FileName" class="form-control-file" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
