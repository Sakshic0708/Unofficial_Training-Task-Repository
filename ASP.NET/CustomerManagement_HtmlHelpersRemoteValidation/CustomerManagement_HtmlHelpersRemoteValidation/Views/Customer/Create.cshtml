@model DataAccessLayer.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="container-fluid row">
    <div class="col-md-4">
       @* //@Html.BeginForm("Create","Customer",FormMethod.Post)*@
       <form asp-action="Create" enctype="multipart/form-data">
     
            @Html.EditorFor(m=>m.Name,null,"Name", new {htmlAttributes = new {@class = "form-control"}})
            @Html.EditorFor(m=>m.Email,null,"Email",new { customclass = "email",Isrequired=true })
            @Html.EditorFor(m=>m.Phone,null,"Phone", new {htmlAttributes = new {@class = "form-control"}})
            @Html.EditorFor(m=>m.Address,null,"Address", new {htmlAttributes = new {@class = "form-control"}})
            @Html.HiddenFor(m=>m.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.FilePath, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <div class="col-md-10">
                    <input type="file" name="FileName" />
                    @Html.ValidationMessageFor(model => model.FilePath, "", new { @class = "text-danger" })
                </div>
            </div>
            <input type="submit" value="Save Changes" class="btn btn-primary mt-2" />
        
       </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
